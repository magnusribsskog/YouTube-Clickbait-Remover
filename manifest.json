{
  "manifest_version": 3,
  "name": "YouTube Clickbait Remover",
  "version": "1.1",
  "description": "Deep-scan DOM filtering for YouTube",
  "author": "Magnus Ribsskog",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Clickbait Remover"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-clickbait-remover@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}